
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Sistema de compras</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class= "container">
            <h2>Carrito</h2>
        </div>
        <div class="producto">
            <label>Pizza peperonni con ingrediente extra mediana ($179)</label>
            <input type="number" id="dominos" min="0" max="10" value="0">
        </div>
        <div class="producto">
            <label>Pizza peperonni con queso chica ($79)</label>
            <input type="number" id="littlecaesars" min="0" max="10" value="0">
        </div>
        <div class="producto">
            <label>Pizza peperonni con queso chica ($89)</label>
            <input type="number" id="pizzahut" min="0" max="10" value="0">
        </div>
        <button onclick="calcularTotal()">Calcular Total</button>

        <div id="total"></div>
        <div class="message" id="message"></div>
    </div>
    <script>
        function calcularTotal() {
            var precioProducto1 = 10;
            var precioProducto2 = 20;
            var precioProducto3 = 30;
            var cantidadProducto1 = parseInt(document.getElementById('dominos').value);
            var cantidadProducto2 = parseInt(document.getElementById('littlecaesars').value);
            var cantidadProducto3 = parseInt(document.getElementById('pizzahut').value);
        
            var subtotal = precioProducto1 * cantidadProducto1 + precioProducto2 * cantidadProducto2 + precioProducto3 * cantidadProducto3;
            var iva = subtotal * 0.16;
            var total = subtotal + iva;
        
            document.getElementById('total').innerHTML = "Subtotal: $" + subtotal.toFixed(2)+ "<br>IVA: $" + iva.toFixed(2) +"<br>Total: $" + total.toFixed(2);
            document.getElementById('message').innerHTML = "";

            if (cantidadProducto1 > 10 || cantidadProducto2 > 10 || cantidadProducto3 > 10) {
                document.getElementById('message').innerHTML = "La cantidad máxima de productos por artículo es 10.";
                return;
            }
        }
    </script>
</body>
